{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "Node",

    "incremental": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "src",
    "paths": {
      "@app/*": ["*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "ts-node-dev": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": [
    "node_modules"
  ]
}